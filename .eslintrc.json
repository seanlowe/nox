{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "prettier",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "curly": ["error", "all"],
        "dot-notation": "error",
        "eqeqeq": ["error", "smart"],
        "prefer-const": "error",
        "prettier/prettier": "error",
        "no-nested-ternary": "error",
        "no-sequences": ["error", { "allowInParentheses": false }],
        "no-unneeded-ternary": "error",
        "no-var": "error"
    }
}
